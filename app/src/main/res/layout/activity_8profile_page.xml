<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".ProfilePage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="415dp"
        android:layout_height="283dp"
        android:background="@color/plomo"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

    </LinearLayout>

    <TextView
        android:id="@+id/txt_miPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="600dp"
        android:fontFamily="@font/jua"
        android:text="@string/profile"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/image_Editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconlapiz" />

    <TextView
        android:id="@+id/txt_NameTitular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:fontFamily="@font/jua"
        android:text="@string/nameprofile"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_MisTarjetas"
        style="@style/boton"
        android:layout_width="345dp"
        android:layout_height="64dp"
        android:layout_marginBottom="256dp"
        android:backgroundTint="@color/plomo"
        android:drawableLeft="@drawable/cardicon"
        android:drawableRight="@drawable/arrow_forward_ios24px"
        android:fontFamily="@font/jua"
        android:gravity="center|left"
        android:text="@string/btn2"
        android:textColor="@color/negro"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Opciones"
        style="@style/boton"
        android:layout_width="345dp"
        android:layout_height="64dp"
        android:layout_marginBottom="176dp"
        android:backgroundTint="@color/plomo"
        android:drawableLeft="@drawable/settingsicon"
        android:drawableRight="@drawable/arrow_forward_ios24px"
        android:fontFamily="@font/jua"
        android:gravity="center|left"
        android:text="@string/btn3"
        android:textColor="@color/negro"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Ayuda"
        style="@style/boton"
        android:layout_width="345dp"
        android:layout_height="64dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@color/plomo"
        android:drawableLeft="@drawable/help_icon"
        android:drawableRight="@drawable/arrow_forward_ios24px"
        android:fontFamily="@font/jua"
        android:gravity="center|left"
        android:text="@string/btn4"
        android:textColor="@color/negro"
        android:textSize="16sp"
        android:visibility="visible"
        app:iconGravity="end"
        app:iconTint="@color/negro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />


    <Button
        android:id="@+id/btn_Info"
        style="@style/boton"
        android:layout_width="345dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/plomo"
        android:drawableLeft="@drawable/profile_icon"
        android:drawableRight="@drawable/arrow_forward_ios24px"
        android:fontFamily="@font/jua"
        android:gravity="center|left"
        android:text="@string/btn1"
        android:textColor="@color/negro"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/image_FotoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:srcCompat="@drawable/fotoperfil" />

</androidx.constraintlayout.widget.ConstraintLayout>